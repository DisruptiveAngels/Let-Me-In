<div class="avatar">
  <h2 class="card-title">Confirma tus datos</h2>
  <img class="card-img-top img-fluid" src="<%= @user.image_url %>" alt="Profile Picture">
</div>
<div class="card-block">
  <%= form_for @user do |f| %>
    <div class="form-group row">
      <%= f.label :name, 'Nombre', class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class:'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email, 'Email', class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.email_field :email, class:'form-control'%>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10 offset-sm-1">
        <%= f.submit 'Continuar', class:"btn btn-success btn-block" %>
      </div>
    </div>
  <% end %>
</div>
