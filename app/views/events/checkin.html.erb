<% content_for :title, "Checkin #{@event.name}" %>
<h2 class="title"><%= "¡Bienvenido al #{@event.name}!" %></h2>
<div class="card card-block card-form">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <%= button_to 'Ingresa con Facebook', "/auth/facebook?event=#{@event.id}", class:"btn btn-primary btn-block btn-login" %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <%= button_to 'Ingresa con Google', "/auth/google_oauth2?event=#{@event.id}", class:"btn btn-danger btn-block btn-login"%>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <%= button_to 'Ingresa con Github', "/auth/github?event=#{@event.id}", class:"btn btn-default btn-block btn-login" %>
    </div>
  </div>
</div>
<div class="card card-block card-form">
  <div class="row">
    <div class="col-xs-12 text-xs-center">
      <p>¿Ya tienes cuenta? <%= link_to "Haz login", login_path %>.</p>
      <p>¿No tienes cuenta? <%= link_to "Registrate", new_identity_path %>.</p>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).on('turbolinks:load', function() {
    setTimeout( function(){
      $('.alert').alert('close');
    }, 4000);
  });
</script>
